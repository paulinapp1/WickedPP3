@page
@model WickedGame.Pages.GameOverModel
@{
    ViewData["Title"] = "Game Over";
    ViewData["CssFile"] = "gameOver.css";
}

<h1>GAME OVER!</h1>
<h2>Your score is @Model.Score</h2>
<form method="post">
    <label for="Name">Enter your name please :) : </label>
    <input type="text" id="Name" asp-for="Name" required />
    <input type="hidden" id="Score" asp-for="Score" />
    <button type="submit">Save Score</button>
</form>
<div class="buttons">
    <div class="choose-character">
        <a asp-area="" asp-page="/Characters">Try again</a>
    </div>
</div>